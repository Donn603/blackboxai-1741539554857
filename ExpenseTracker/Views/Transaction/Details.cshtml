@model ExpenseTracker.Models.Transaction

@{
    ViewData["Title"] = "Transaction Details";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <h2 class="h5 mb-0">Transaction Details</h2>
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-sm-6">
                            <div class="mb-3">
                                <label class="form-label text-muted">Transaction Date</label>
                                <p class="h5">@Model.TransactionDate.ToShortDateString()</p>
                            </div>
                            <div class="mb-3">
                                <label class="form-label text-muted">Amount</label>
                                <p class="h5 @(Model.Amount < 0 ? "text-danger" : "text-success")">
                                    @Model.Amount.ToString("C")
                                </p>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="mb-3">
                                <label class="form-label text-muted">Category</label>
                                <p class="h5">@Model.Category.Name</p>
                            </div>
                            @if (Model.Vendor != null)
                            {
                                <div class="mb-3">
                                    <label class="form-label text-muted">Vendor</label>
                                    <p class="h5">@Model.Vendor.Name</p>
                                </div>
                            }
                        </div>
                    </div>

                    <div class="mb-4">
                        <label class="form-label text-muted">Description</label>
                        <p class="lead">@Model.Description</p>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back to List
                        </a>
                        <a asp-action="Edit" asp-route-id="@Model.TransactionId" class="btn btn-primary">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.TransactionId" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Delete
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
